<p id="notice"><%= notice %></p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-sign-in">
      <div class="form-sign-in-heading">
        Sign In
      </div>

      <div class="login-wrap">
        <%= f.email_field :email, autofocus: true, :class => 'form-control sign-email', :placeholder => 'email@email.com' %>

        <%= f.password_field :password, autocomplete: "off", :class => 'form-control sign-password', :placeholder => 'password' %>

        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <span style="color: #999;">Remember me</span>
        <% end -%>

        <hr>

        <div style="text-align: center;">
          <button class="btn-flat-success" type="submit" style="width: 150px;height: 40px;">LOGIN</button>
        </div>
      </div>
    </div>
<% end %>

