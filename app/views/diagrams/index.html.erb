<p id="notice"><%= notice %></p>

<h1>Diagrams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Diagrammable</th>
      <th>Diagrammable type</th>
      <th>Layout</th>
      <th>Tenant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diagrams.each do |diagram| %>
      <tr>
        <td><%= diagram.name %></td>
        <td><%= diagram.diagrammable_id %></td>
        <td><%= diagram.diagrammable_type %></td>
        <td><%= diagram.layout %></td>
        <td><%= diagram.tenant %></td>
        <td><%= link_to 'Show', diagram %></td>
        <td><%= link_to 'Edit', edit_diagram_path(diagram) %></td>
        <td><%= link_to 'Destroy', diagram, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

