<p id="notice"><%= notice %></p>

<h1>Nodes</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Code</th>
      <th>Uuid</th>
      <th>Devise code</th>
      <th>Is selected</th>
      <th>Node set</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.type %></td>
        <td><%= node.name %></td>
        <td><%= node.code %></td>
        <td><%= node.uuid %></td>
        <td><%= node.devise_code %></td>
        <td><%= node.is_selected %></td>
        <td><%= node.node_set %></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

