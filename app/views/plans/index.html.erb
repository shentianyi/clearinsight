<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Remark</th>
      <th>User</th>
      <th>Type</th>
      <th>Status</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Due time</th>
      <th>Taskable</th>
      <th>Taskable type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.title %></td>
        <td><%= plan.content %></td>
        <td><%= plan.remark %></td>
        <td><%= plan.user %></td>
        <td><%= plan.type %></td>
        <td><%= plan.status %></td>
        <td><%= plan.start_time %></td>
        <td><%= plan.end_time %></td>
        <td><%= plan.due_time %></td>
        <td><%= plan.taskable_id %></td>
        <td><%= plan.taskable_type %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>
