<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Remark</th>
      <th>User</th>
      <th>Type</th>
      <th>Status</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Due time</th>
      <th>Taskable</th>
      <th>Taskable type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.remark %></td>
        <td><%= task.user %></td>
        <td><%= task.type %></td>
        <td><%= task.status %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= task.due_time %></td>
        <td><%= task.taskable_id %></td>
        <td><%= task.taskable_type %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
